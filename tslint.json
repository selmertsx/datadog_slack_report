{
  "extends": "tslint:recommended",
  "rules": {
      "max-line-length": {
          "options": [120]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "interface-name": [true, "never-prefix"],
      "variable-name": [false]
  },
  "jsRules": {
      "max-line-length": {
          "options": [120]
      }
  }
}
